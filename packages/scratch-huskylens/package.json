{
  "name": "scratch-huskylens",
  "version": "0.0.0",
  "description": "extension for SAM Scratch",
  "scripts": {
    "setup-dev": "node ./scripts/setup-dev.mjs",
    "build": "node scripts/extract-messages.js && rollup -c ./scripts/rollup.config.mjs",
    "watch": "rollup -c ./scripts/rollup.config.mjs --watch",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test:unit": "jest test/unit",
    "extract": "node scripts/extract-messages.js"
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/eslint-parser": "^7.26.8",
    "@babel/plugin-transform-react-jsx": "^7.25.9",
    "@babel/plugin-transform-runtime": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/register": "^7.25.9",
    "@types/jest": "^30.0.0",
    "chai": "^5.2.0",
    "core-js": "^3.40.0",
    "eslint": "^8.57.0",
    "eslint-config-scratch": "^9.0.9",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-mocha": "^10.5.0",
    "fs-extra": "^11.3.0",
    "jest": "^29.7.0",
    "rollup": "^4.42.0",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "ts-jest": "^29.4.1",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "glob": "^11.0.2"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)\\??$": "<rootDir>/test/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/test/__mocks__/styleMock.js"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "tsx",
      "jsx"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": "babel-jest"
    }
  }
}
