{
  "name": "scratch-samlabs",
  "version": "0.0.0",
  "description": "extension for SAM Scratch",
  "scripts": {
    "setup-dev": "node ./scripts/setup-dev.mjs",
    "build": "rollup -c ./scripts/rollup.config.mjs",
    "watch": "rollup -c ./scripts/rollup.config.mjs --watch",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test:unit": "cross-env jest test/unit"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/eslint-parser": "^7.26.8",
    "@babel/plugin-transform-react-jsx": "^7.25.9",
    "@babel/plugin-transform-runtime": "^7.26.9",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/register": "^7.25.9",
    "@eslint/js": "^9.32.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-image": "^3.0.3",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-multi-entry": "^6.0.1",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "chai": "^4.5.0",
    "core-js": "^3.40.0",
    "eslint": "^8.57.1",
    "eslint-config-scratch": "^9.0.9",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-mocha": "^10.5.0",
    "eslint-plugin-react": "^7.37.5",
    "fs-extra": "^11.3.0",
    "globals": "^16.3.0",
    "jest": "^21.2.1",
    "rollup": "^4.34.7",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "typescript-eslint": "^8.39.0"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "\\.(png|jpg|jpeg|svg|gif)$": "<rootDir>/test/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/test/__mocks__/styleMock.js"
    },
    "moduleFileExtensions": [
      "js",
      "jsx"
    ]
  }
}
