{
  "name": "scratch-babysambot",
  "version": "1.0.0-sam-scratch",
  "description": "extension for SAM Scratch",
  "scripts": {
    "setup-dev": "node ./scripts/setup-dev.mjs",
    "build": "rollup -c ./scripts/rollup.config.mjs",
    "watch": "rollup -c ./scripts/rollup.config.mjs --watch",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test:unit": "cross-env jest test/unit"
  },
  "dependencies": {
    "scratch-samlabs": "1.0.0-sam-scratch"
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/eslint-parser": "^7.26.8",
    "@babel/plugin-transform-react-jsx": "^7.25.9",
    "@babel/plugin-transform-runtime": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/register": "^7.25.9",
    "chai": "^5.2.0",
    "core-js": "^3.40.0",
    "eslint": "^8.57.0",
    "eslint-config-scratch": "^9.0.9",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-mocha": "^10.5.0",
    "fs-extra": "^11.3.0",
    "jest": "^29.7.0",
    "rollup": "^4.34.7",
    "rollup-plugin-polyfill-node": "^0.13.0"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "\\.(png|jpg|jpeg|svg|gif)$": "<rootDir>/test/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/test/__mocks__/styleMock.js"
    },
    "moduleFileExtensions": [
      "js",
      "jsx"
    ]
  }
}
